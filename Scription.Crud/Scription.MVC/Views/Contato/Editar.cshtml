@model Scription.MVC.Models.Contato

@{
    ViewBag.Title = "Editar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="panel panel-info">

        <div class="panel-heading">
            Editar contato
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    @Html.LabelFor(model => model.Nome)

                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control disabled", placeHolder = "Ex: Luiz Fernando", DisplayMode="block"})
                    @Html.ValidationMessageFor(model => model.Nome)
                </div><!--/col-lg-6-->
            </div><!--/row-->

            <div class="row">
                <div class="col-lg-6">

                    @Html.LabelFor(model => model.Telefone)

                    @Html.TextBoxFor(model => model.Telefone, new { @class = "form-control", placeHolder = "Ex: 11 985446476 " })
                    @Html.ValidationMessageFor(model => model.Telefone)
                </div><!--/col-lg-6-->
            </div><!--/row-->

            <div class="row">
                <div class="col-lg-6">
                    @Html.LabelFor(model => model.Email)

                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeHolder = "Ex: Luizfernando@hotmail.comm" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div><!--/col-lg-6-->
            </div><!--/row-->

        </div><!--/panel-->

        <div class="panel-footer">

            @Html.ActionLink("Voltar", "Index", "", new { @class = "btn btn-danger" })
            <input type="submit" value="Concluir" class="btn btn-success" />
        </div>
    </div>
}

